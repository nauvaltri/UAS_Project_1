<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmain"
    tools:context=".Home2Fragment">
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/titleListMovie"
        android:layout_height="wrap_content"
        android:text="LIST MOVIE"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:textSize="30dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        />

    <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:paddingBottom="50dp"
        android:id="@+id/recyclerPiwUser"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/titleListMovie"
        app:layout_constraintTop_toBottomOf="@id/titleListMovie"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>