<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingHorizontal="18dp"
    android:layout_marginHorizontal="24dp"
    android:layout_marginVertical="20dp"
    android:background="@drawable/custom_shape"
    android:outlineAmbientShadowColor="@color/white">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardCharacterImage"
        android:layout_marginTop="10dp"
        android:layout_width="140dp"
        android:layout_height="160dp"
        app:cardCornerRadius="15dp"
        >

        <ImageView
            android:id="@+id/ivImageUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/greyhound"
            />
    </androidx.cardview.widget.CardView>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvTitleUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/cardCharacterImage"
        android:layout_alignTop="@id/cardCharacterImage"
        android:layout_marginStart="10dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="Film Action"
        />

    <TextView
        android:id="@+id/tvAuthorUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/cardCharacterImage"
        android:layout_below="@id/tvTitleUser"
        android:layout_marginStart="10dp"
        android:textSize="18dp"
        android:textStyle="normal"
        android:text="Huda Buronan Konstitusi"
        />
    <TextView
        android:id="@+id/tvDescUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/cardCharacterImage"
        android:layout_below="@id/tvAuthorUser"
        android:layout_marginStart="10dp"
        android:textSize="18dp"
        android:textStyle="normal"
        android:text="Huda Buronan Konstitusi"
        />

    <RatingBar
        android:id="@+id/ratingbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numStars="1"
        android:rating="1"
        android:stepSize="3"
        android:progressBackgroundTint="@color/white"
        android:progressTint="@android:color/holo_orange_dark"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:transformPivotX="25dp"
        android:transformPivotY="30dp"
        />




