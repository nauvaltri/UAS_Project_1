<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminListAddMainActivity"
    android:background="@drawable/bgitem">

    <LinearLayout
        android:id="@+id/nav_listmovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/add_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:src="@drawable/baseline_arrow_back_ios_24" />

        <TextView
            android:id="@+id/titleListMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="TAMBAHKAN MOVIE"
            android:textColor="@color/white"
            android:textSize="30dp" />

    </LinearLayout>


    <LinearLayout
        android:paddingHorizontal="32dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/adminListAddImage"
            android:layout_width="match_parent"
            android:layout_height="196dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:src="@color/black"
                android:id="@+id/imageViewAdd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/baseline_add_24" />

        </com.google.android.material.card.MaterialCardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="30dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/adminListAddTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/outline_black"
            android:hint="Title"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_regular"
            android:paddingHorizontal="65dp"
            android:paddingVertical="12dp"
            android:layout_gravity="center"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/adminListAddAuthor"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/outline_black"
            android:hint="Author"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_regular"
            android:paddingHorizontal="55dp"
            android:paddingVertical="12dp"
            android:layout_gravity="center"/>
        </LinearLayout>
        <com.google.android.material.textfield.TextInputEditText
            android:height="144dp"
            android:id="@+id/adminListAddDescription"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/outline_black"
            android:hint="Description"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_regular"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:layout_gravity="center"/>

<!--        <Spinner-->
<!--            android:id="@+id/adminListAddSpinner"-->
<!--            android:background="@drawable/outline_black"-->
<!--            android:hint="Rating Film"-->
<!--            android:layout_width="200dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_marginTop="18dp"-->
<!--            android:entries="@array/Rating"-->
<!--        />-->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/adminListAddButton"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="36dp"
            android:background="@drawable/filled_blue"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp"
            android:text="Membuat Item"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>